<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".editProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/telNo_TextView_edit_profile_activity"
                android:layout_width="200dp"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="195dp"
                android:text="Telefon Numarası"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/eposta_EditText_edit_profile_activity" />

            <TextView
                android:id="@+id/hakkinda_TextView_edit_profile_activity"
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Hakkında"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/epostaAdresi_TextView_edit_profile_activity"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/kullaniciAdi_EditText_edit_profile_activity" />

            <ImageView
                android:id="@+id/profilResmi_ImageView_edit_profile_activity"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="131dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="130dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/ic_launcher_round" />

            <EditText
                android:id="@+id/eposta_EditText_edit_profile_activity"
                android:layout_width="380dp"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/epostaAdresi_TextView_edit_profile_activity"
                tools:text="e-posta" />

            <TextView
                android:id="@+id/kullaniciAdi_TextView_edit_profile_activity"
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:layout_marginTop="16dp"
                android:text="Kullanıcı Adı"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/hakkinda_TextView_edit_profile_activity"
                app:layout_constraintTop_toBottomOf="@+id/adSoyad_EditText_edit_profile_activity" />

            <TextView
                android:id="@+id/epostaAdresi_TextView_edit_profile_activity"
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="E-posta Adresi"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/telNo_TextView_edit_profile_activity"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hakkinda_EditText_edit_profile_activity" />

            <Button
                android:id="@+id/guncelle_Button_edit_profile_activity"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="32dp"
                android:text="Güncelle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/telNo_EditText_edit_profile_activity" />

            <TextView
                android:id="@+id/profilResminiDegistirLink_TextView_edit_profile_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:padding="5dp"
                android:text="Profil Resmini Değiştir"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profilResmi_ImageView_edit_profile_activity" />

            <EditText
                android:id="@+id/kullaniciAdi_EditText_edit_profile_activity"
                android:layout_width="380dp"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/kullaniciAdi_TextView_edit_profile_activity"
                tools:text="kullanici adi" />

            <EditText
                android:id="@+id/telNo_EditText_edit_profile_activity"
                android:layout_width="380dp"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:ems="10"
                android:inputType="phone"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/telNo_TextView_edit_profile_activity"
                tools:text="telefon" />

            <TextView
                android:id="@+id/ad_TextView_edit_profile_activity"
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:text="Ad"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/kullaniciAdi_TextView_edit_profile_activity"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profilResminiDegistirLink_TextView_edit_profile_activity" />

            <EditText
                android:id="@+id/hakkinda_EditText_edit_profile_activity"
                android:layout_width="380dp"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hakkinda_TextView_edit_profile_activity"
                tools:text="hakkinda" />

            <EditText
                android:id="@+id/adSoyad_EditText_edit_profile_activity"
                android:layout_width="380dp"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ad_TextView_edit_profile_activity"
                tools:text="ad soyad" />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>